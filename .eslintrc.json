{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "next/core-web-vitals",
    "standard",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",             // Warn on console logs
    "semi": ["error", "always"],      // Enforce semicolons
    "quotes": ["error", "single"],    // Enforce single quotes
    "tailwindcss/classnames-order": "warn" // Enforce Tailwind CSS class 
    
  },
  "plugins": [
    "tailwindcss",
    "prettier"
  ]
}
